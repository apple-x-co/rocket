{
  "name": "apple-x-co/rocket",
  "description": "deploy tool",
  "authors": [
    {
      "name": "apple-x-co",
      "email": "apple.x.co@gmail.com"
    }
  ],
  "bin": [
    "bin/rocket.php"
  ],
  "require": {
    "php": "^5.4 || ^7.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-posix": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.8",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^4.24"
  },
  "autoload": {
    "psr-4": {
      "Rocket\\": "src/"
    }
  },
  "scripts": {
    "information": "@php rocket.phar --info --no-color",
    "download-phar-composer": "curl --silent --show-error --location https://clue.engineering/phar-composer-latest.phar --output phar-composer.phar",
    "build": "@php bin/build.php",
    "cs": "./vendor/bin/phpcs",
    "cs-fix": "./vendor/bin/phpcbf src tests",
    "sa": [
      "./vendor/bin/phpstan analyse -c phpstan.neon",
      "psalm --show-info=true"
    ],
    "tests": [
      "@cs",
      "@sa"
    ],
    "post-install-cmd": "[ $COMPOSER_DEV_MODE -eq 0 ] || \"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility",
    "post-update-cmd": "[ $COMPOSER_DEV_MODE -eq 0 ] || \"vendor/bin/phpcs\" --config-set installed_paths vendor/phpcompatibility/php-compatibility"
  },
  "scripts-descriptions": {
    "cs": "Check the coding style",
    "cs-fix": "Fix the coding style",
    "sa": "Run static analysis",
    "tests": "Run tests and quality checks"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
